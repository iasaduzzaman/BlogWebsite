@model BlogWebsite.Models.ViewModels.EditTagRequest
@{
}
<div class="bg-primary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit the List - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if(Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" id="id" class="form-control" asp-for="Id" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" id="name" class="form-control" asp-for="name" />
            </div>

            <div class="mb-3">
                <label class="form-label">DisplayName</label>
                <input type="text" id="displayName" class="form-control" asp-for="DisplayName" />
            </div>

            <div class="mb-3">
                <div class="d-flex">
                    <button type="submit" class="btn btn-outline-info">Update</button>
                    <button class="btn btn-outline-danger ms-2" type="submit"
                            asp-area=""
                            asp-controller="AdminTags"
                            asp-action="Delete">
                        Delete
                    </button>

                </div>
            </div>
        </form>
    }
    else
    {
        <p>Tag not found!</p>
    }
</div>